# Auto detect text files and perform LF normalization
* text=auto

# Large files that should be tracked with Git LFS
*.jpg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text
*.bmp filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.csv filter=lfs diff=lfs merge=lfs -text

# Model files
models/*.onnx filter=lfs diff=lfs merge=lfs -text
models/*.csv filter=lfs diff=lfs merge=lfs -text

# Dataset files
raw_dataset/*.jpg filter=lfs diff=lfs merge=lfs -text
synthetic_dataset/*.jpg filter=lfs diff=lfs merge=lfs -text
backgrounds/*.jpg filter=lfs diff=lfs merge=lfs -text
features/*.png filter=lfs diff=lfs merge=lfs -text
raw_images/*.jpg filter=lfs diff=lfs merge=lfs -text 